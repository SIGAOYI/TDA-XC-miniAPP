/* proofPhone.wxss */

.proof-phone {
}

.proof-phone .wrap {
  padding-top: 100rpx;
}

.proof-phone .wrap .title {
  text-align: center;
  font-size: 38rpx;
  line-height: 4;
}

.proof-phone .wrap .input-wrap {
  display: flex;
  height: 120rpx;
  background-color: #FFF;
}
.proof-phone .wrap .input-wrap .item-input {
  flex: 1;
  box-sizing: border-box;
  padding-left: 60rpx; 
}
.proof-phone .wrap .input-wrap .item-input input {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 34rpx;
}
.proof-phone .wrap .input-wrap .item-btn {
  position: relative;
  width: 200rpx;
  height: 120rpx;
}
.proof-phone .wrap .input-wrap .item-btn .btn {
  position: absolute;
  top: 35rpx;
  left: 15%;
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  color: #FFF;
  background-color: #4C4B5B;
}
.proof-phone .wrap .btn-wrap {
  margin-top: 30rpx;
}

.proof-phone .wrap .btn-wrap button {
  margin-top: 50rpx;
  color: #fff;
}

.proof-phone .wrap .btn-wrap .confirm {
  background-color: #4c4b5c;
}