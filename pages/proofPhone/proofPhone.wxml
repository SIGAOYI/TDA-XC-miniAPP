<!--proofPhone.wxml-->
<view class="container proof-phone">
  <view class="wrap">
    <view class="title">请输入需绑定的手机号</view>
    <view class="input-wrap">
      <view class="item-input">
        <input placeholder="请输入手机号" bindinput="bindInfoChange" value="{{phone}}" type="number" />
      </view>
    </view>
    <view class="btn-wrap">
      <button class="confirm button" bindtap="bindSubmitForm">获取验证码</button>
    </view>
  </view>
</view>