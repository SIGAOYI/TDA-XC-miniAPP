.choose-car {
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}

.choose-car .title {
  box-sizing: border-box;
  display: block;
  padding: 0 50rpx;
  width: 100%;
  line-height: 48rpx;
  color: #ccc;
  font-size: 28rpx;
}

.choose-car .add-car-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background-color: #4c4b5c;
  text-align: center;
  font-size: 28rpx;
  box-shadow: 0rpx -1rpx 2rpx 0rpx #ccc;
}

.choose-car .cars-list {
  padding: 10px 0;
  width: 100%;
}

.choose-car .cars-list .cars-list-item {
  display: flex;
  box-sizing: border-box;
  padding: 10rpx 30rpx 10rpx 50rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
}

.choose-car .cars-list .cars-list-item .user-info {
  flex: 1;
  height: 140rpx;
}

.choose-car .cars-list .cars-list-item .user-info .car-num {
  line-height: 70rpx;
  font-size: 42rpx;
}

.choose-car .cars-list .cars-list-item .user-info .car-num .small {
  margin-left: 20rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
}

.choose-car .cars-list .cars-list-item .user-info .item-info {
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  height: 40rpx;
}

.choose-car .cars-list .cars-list-item .edit-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.choose-car .cars-list .cars-list-item .edit-item .edit-btn {
  position: absolute;
  width: 120rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -60rpx;
  background-color: #FF8C19;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
}
.choose-car .bg-icon {
  position: fixed;
  width: 250rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-top: -165rpx;
  margin-left: -125rpx;
  background-image: url('http://image.lawootrip.com/no-order.png');
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
}
.choose-car .hide {
  display: none;
}
