/* driverIndex.wxss */

page {
  background: linear-gradient(to bottom right, #4c4b5c, #517796);
  height: 100%;
  overflow: hidden;
}

.driver-index .top-list {
  padding-top: 30rpx;
  display: flex;
  height: 140rpx;
}

.driver-index .top-list .item-content {
  flex: 1;
  box-sizing: border-box;
  padding: 20rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #fff;
}

.driver-index .top-list .cash-order {
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
}

.driver-index .order-list {
  padding-bottom: 20rpx;
  position: absolute;
  top: 150rpx;
  bottom: 200rpx;
  width: 100%;
  overflow: scroll;
}

.driver-index .order-list .item-title {
  display: flex;
  box-shadow: border-box;
  padding: 20rpx 20rpx 0;
  height: 60rpx;
}

.driver-index .order-list .item-title .list-title {
  padding: 0 10rpx;
  height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
}

.driver-index .order-list .item-title .dark {
  color: #777;
}

.driver-index .order-list .item-title .list-detail {
  flex: 1;
  height: 60rpx;
  position: relative;
}

.driver-index .order-list .item-title .list-detail .btn {
  position: absolute;
  top: 0;
  right: 0;
  color: #fc9153;
  font-size: 24rpx;
  line-height: 60rpx;
  text-decoration: underline;
}

.driver-index .order-list .item-content .list-item {
  margin-top: 20rpx;
  padding: 20rpx 20rpx 0;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 1rpx 3rpx #dfdfdf;
}

.driver-index .order-list .item-content {
  margin: 0 auto;
  width: 94%;
}

.driver-index .order-list .item-content .list-item .item-header {
  display: flex;
  height: 60rpx;
  border-bottom: 1px solid #dfdfdf;
  color: #555;
}

.driver-index .order-list .item-content .list-item .item-header .order-time {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}

.driver-index .order-list .item-content .list-item .item-header .order-status {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: right;
}

.driver-index .order-list .item-content .list-item .item-info {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}

.driver-index .order-list .item-content .list-item .item-info {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}

.driver-index .order-list .item-content .list-item .item-info .info-item {
  display: flex;
  height: 70rpx;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .point-box {
  position: relative;
  width: 30rpx;
  height: 70rpx;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .point-box .point {
  position: absolute;
  top: 50%;
  left: 0rpx;
  margin-top: -8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .point-box .point-blue {
  background-color: #3dbca3;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .point-box .point-red {
  background-color: #f57271;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .point-box .point-yellow {
  background-color: #f8e81c;
}

.driver-index .order-list .item-content .list-item .item-info .info-item .text {
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 20rpx;
  line-height: 70rpx;
  height: 70rpx;
  font-size: 30rpx;
}

.driver-index .order-list .item-content .list-item .item-footer {
  width: 100%;
  height: 100rpx;
}

.driver-index .order-list .item-content .list-item .item-footer {
  width: 100%;
  height: 80rpx;
}

.driver-index .order-list .item-content .list-item .item-footer .eval {
  float: right;
  margin-top: 10rpx;
  width: 200rpx;
  height: 60rpx;
}

.driver-index .order-list .item-content .list-item .item-footer .eval .btn {
  float: right;
  width: 120rpx;
  height: 100%;
  color: #fff;
  background-color: #fc9153;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
}

.driver-index .order-list .item-content .list-item .item-footer .eval .cancel {
  background-color: #999;
}

.driver-index .order-list .item-content .bg-icon {
  position: fixed;
  width: 250rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-top: -165rpx;
  margin-left: -125rpx;
  background-image: url('http://image.lawootrip.com/no-car.png');
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
}

.driver-index .btn-module {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200rpx;
}
.driver-index .btn-module .item-btn {
  position: absolute;
  background-color: #92A6B3;
  color: #FFF;
  text-align: center;
}
.driver-index .btn-module .big-btn {
  top: 10rpx;
  left: 50%;
  margin-left: -70rpx;
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 32rpx;
  border-radius: 70rpx;
}
.driver-index .btn-module .work-start {
  background-color: #FF8903;
}
.driver-index .btn-module .small-btn {
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.driver-index .btn-module .snap-order {
  left: 10%;
}
.driver-index .btn-module .kf {
  right: 10%;
}
.driver-index .btn-module .small-btn image {
  margin: 20rpx auto;
  width: 60rpx;
  height: 60rpx;
}