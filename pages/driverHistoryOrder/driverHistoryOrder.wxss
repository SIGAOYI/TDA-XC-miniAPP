/* driver-history-order.wxss */

.driver-history-order .wrap {
  padding-top: 40rpx;
}

.driver-history-order .wrap .list-item {
  margin-top: 20rpx;
  padding: 20rpx 20rpx 0;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 1rpx 3rpx #dfdfdf;
}

.driver-history-order .wrap .list-item .item-header {
  display: flex;
  height: 60rpx;
  border-bottom: 1px solid #dfdfdf;
  color: #555;
}

.driver-history-order .wrap .list-item .item-header .order-time {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}

.driver-history-order .wrap .list-item .item-header .order-status {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: right;
}

.driver-history-order .wrap .list-item .item-info {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}

.driver-history-order .wrap .list-item .item-info {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}

.driver-history-order .wrap .list-item .item-info .info-item {
  display: flex;
  height: 70rpx;
}

.driver-history-order .wrap .list-item .item-info .info-item .point-box {
  position: relative;
  width: 30rpx;
  height: 70rpx;
}

.driver-history-order .wrap .list-item .item-info .info-item .point-box .point {
  position: absolute;
  top: 50%;
  left: 0rpx;
  margin-top: -8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

.driver-history-order .wrap .list-item .item-info .info-item .point-box .point-blue {
  background-color: #3dbca3;
}

.driver-history-order .wrap .list-item .item-info .info-item .point-box .point-red {
  background-color: #f57271;
}

.driver-history-order .wrap .list-item .item-info .info-item .point-box .point-yellow {
  background-color: #f8e81c;
}

.driver-history-order .wrap .list-item .item-info .info-item .text {
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 20rpx;
  line-height: 70rpx;
  height: 70rrpx;
  font-size: 30rpx;
}

.driver-history-order .wrap .list-item .item-footer {
  width: 100%;
  height: 100rpx;
}

.driver-history-order .wrap .list-item .item-footer {
  width: 100%;
  height: 80rpx;
}

.driver-history-order .wrap .list-item .item-footer .eval {
  float: right;
  margin-top: 10rpx;
  width: 200rpx;
  height: 60rpx;
}

.driver-history-order .wrap .list-item .item-footer .eval .btn {
  float: right;
  width: 120rpx;
  height: 100%;
  color: #fff;
  background-color: #fc9153;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
}

.driver-history-order .wrap .list-item .item-footer .eval .cancel {
  background-color: #999;
}

.driver-history-order .wrap .list-item .item-footer .eval .eval-item .img {
  float: right;
  margin-right: 10rpx;
  width: 40rpx;
  height: 60rpx;
}

.driver-history-order .wrap .list-item .item-footer .eval .eval-item .img image {
  width: 100%;
  height: 100%;
}

.driver-history-order .wrap .list-item .item-footer .eval .eval-item .text {
  float: right;
  height: 60px;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: right;
}

.driver-history-order .wrap .list-item .item-footer .eval .eval-item .zan {
  color: #fc9153;
}

.driver-history-order .wrap .list-item .item-footer .eval .eval-item .cai {
  color: #999;
}

.driver-history-order .wrap .bg-icon {
  position: fixed;
  width: 250rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-top: -165rpx;
  margin-left: -125rpx;
  background-image: url('http://image.lawootrip.com/no-car.png');
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
}

.driver-history-order .wrap .hide {
  display: none;
}
